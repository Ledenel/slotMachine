doctype html
html
    head
        title Slot Machine
        link(rel='stylesheet', href='/stylesheets/reset.css')
        link(rel='stylesheet', href='/stylesheets/slot.css')
        link(rel='stylesheet', href='/Fonts/Slackey.css')
        script(src="/javascripts/jquery/1.9.1/jquery.min.js")
    body
        #viewport
            #container-outter
                #container
                    #header
                        h1 Who is lucky?
                    #reels
                      canvas#slot1(width=70,height=300)
                      canvas#slot2(width=70,height=300)
                      canvas#slot3(width=70,height=300)
                      canvas#slot4(width=70,height=300)
                      canvas#slot5(width=70,height=300)
                      canvas#slot6(width=70,height=300)
                      canvas#slot7(width=70,height=300)
                      canvas#slot8(width=70,height=300)
        #bgvid_div(style="overflow:hidden;")
            video#bgvid(src="/video/background3.mp4",loop,autoplay,autobuffer,preload="auto",onended="VM.play();",data-tag,oncontextmenu="return false")
        script(src="/javascripts/list.js")
        script(src="/javascripts/slot.js")
        script.
            window.onload = slotgame;
            var lastPress = new Date();
            window.onkeydown = function (event) {
                console.log(event.keyCode+' Down!');
                switch (event.keyCode) {
                    case 13:
                        rollingRandom();
                        lastPress = new Date();
                        break;
                    case 32:
                        rollingLine();
                        lastPress = new Date();
                        break;
                }
            };
            var x = 0;
            var reels = $("#reels");
            var h1 = $("h1");
            var speed = 0.02;
            setInterval(function () {
                ++x;
                reels.css("box-shadow","rgb(255, 255, 255) 0px 0px "+(Math.sin(x*speed)*25+50)+"px 0px");
                h1.css("text-shadow","rgb(230, 255, 43) 0px 0px "+(Math.sin(x*speed)*25+35)+"px, rgb(72, 167, 255) 0px 0px "+(Math.sin(x*speed)*25+35)+"px")
                //console.log($("#reels").css("box-shadow"));
            },20);
